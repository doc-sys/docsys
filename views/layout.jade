doctype html
html
  head
    title= title ? title : "docsys"
    link(rel="stylesheet", type="text/css", href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.css")
    link(rel="stylesheet", href="/stylesheets/easy-autocomplete.min.css")
    block scripts
      script(src="https://code.jquery.com/jquery-3.3.1.min.js", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container
      if (messages)
        .row
          .column
            if (messages.success)
              span#successMessage.messageBox= messages.success
            if (messages.warn)
              span#warnMessage.messageBox= messages.warn
      .row
        .column
          if (title)
            h1= title
          else
            h1 docsys
      .row(style="margin-bottom: 20px;")
        .column
          if isAuthenticated
            a.button(href="/documents")= __('Home')
            a.button(href="/documents/upload", style="margin-left: 10px;")= __('Upload')
            a.button(href="/user/logout", style="margin-left: 10px;")= __('Logout')
          else
            a.button.button-outline.disabled(href="/documents")= __('Home')
            a.button.button-outline.disabled(href="/documents/upload", style="margin-left: 10px;")= __('Upload')
            a.button(href="/user/login", style="margin-left: 10px;")= __('Login')
        if isAuthenticated
          .column
            span.float-right= __('Welcome') 
              a(href="/settings")
                span= ' ' + user.settings.displayName || user.username
      block content
